---
// src/components/Footer.astro
const today = new Date();

import IconBilibili from './Icon/IconBilibili.astro';
import IconGitHub from './Icon/IconGitHub.astro';
---

<footer>
	&copy; {today.getFullYear()} EchoCreek. 版权所有.
	<div class="social-links">
		<a href="https://space.bilibili.com/36778438" target="_blank" aria-label="Bilibili">
			<IconBilibili size={32} />
		</a>
		<a href="https://github.com/EchoCreek" target="_blank" aria-label="GitHub">
			<IconGitHub size={32} />
		</a>
	</div>
</footer>

<style>
	footer {
		padding: 2em 1em 4em 1em; /* 稍微减少了底部 padding */
		text-align: center;

		/* --- 核心修改 --- */
		/* 文字颜色使用 --font-color 变量，并降低不透明度使其柔和 */
		color: var(--font-color);
		opacity: 0.7;
	}

	.social-links {
		display: flex;
		justify-content: center;
		gap: 1.5em; /* 稍微增大图标间距 */
		margin-top: 1.5em;
	}

	.social-links a {
		text-decoration: none;
		/* 4. 图标颜色与文字颜色保持一致 */
		color: var(--font-color);
        transition: color 0.2s ease;
	}

	.social-links a:hover {
		/* 5. 悬浮时使用全局的链接颜色，保持站点统一 */
		color: var(--link-color);
	}
</style>